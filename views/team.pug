include ./head.pug

link(rel='stylesheet', href='styles/team.css')

.header
    img.logo(src='img/team.jpg')
    .heading Your team

.team
    label team name
    input#team-name(type='text', placeholder='what\'s your team called?',
    autofocus, value=team.name)
    label#name-message
    <br /><br />
    if (team.name)
        label select track
        each track in ['doctor love', 'learning algorithms', 'health transactions']
            if (team.track == track)
                input(type='radio', name='track', value=track id=track checked=true)
            else
                input(type='radio', name='track', value=track id=track)
            label(for=track).radio-inline=track
        label#track-message

if (team.name)
    .members
        label members (max 4)
        if team
            if team.members
                each member in team.members
                    .member
                        span=member.username||member.name
                        if (user.username == member.username)
                            a(href='/leave', class='tiny', style='margin-left: 10px') leave team

        label(style="margin-top: 15px; line-height: 2")
            span share this url to invite your team members:&nbsp;
            span(style='color:#1268A2')=team.inviteLink
            span &nbsp;
            a(id='copy', data-clipboard-text=team.inviteLink) copy

    .t-shirt
        label your linkedin profile url (mandatory)
        input#linkedin(type='text', placeholder='enter the full url....', value=user.linkedinurl)
        label#linkedin-message

    .t-shirt
        label your t-shirt size
        input#tshirt(type='text', placeholder='S/M/L/XL/XXL', value=user.tshirt)
        label#tshirt-message

include ./common-styles.pug
include ./scripts.pug
